# Redis Configuration
# Option 1: Use Redis URL (Recommended for production)
REDIS_URL=redis://localhost:6379/0

# Option 2: Use individual config (For local development)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0

# Redis URL Examples:
# Local: redis://localhost:6379/0
# With password: redis://:password@localhost:6379/0
# With username: redis://username:password@localhost:6379/0
# Cloud Redis: redis://user:pass@redis-cloud.com:12345/0

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True

# Security (Change in production)
SECRET_KEY=your-secret-key-here

# Session Configuration
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
